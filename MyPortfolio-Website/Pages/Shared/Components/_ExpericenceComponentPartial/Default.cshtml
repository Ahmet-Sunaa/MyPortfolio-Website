@model List<MyPortfolio_Website.DAL.Entities.Expericence>

<section class="py-5 wow fadeInUp" data-wow-delay="0.1s">
    <h1 class="title pb-3 mb-5">Deneyimlerim</h1>
    <div class="border-start border-2 border-light pt-2 ps-5">
        
        @foreach (var item in Model)
        {
            <div class="position-relative mb-4">
                <span class="bi bi-arrow-right fs-4 text-light position-absolute" style="top: -5px; left: -50px;"></span>
                <h5 class="mb-1">@item.ExpericenceRole</h5>
                <p class="mb-2">@item.Title | <small>@item.ExpericenceDate</small></p>
                <p>@item.ExpericenceDesc</p>
            </div>
        }
        
    </div>
</section>