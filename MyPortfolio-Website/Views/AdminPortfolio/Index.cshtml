@model List<MyPortfolio_Website.DAL.Entities.Portfolio>

@{
	ViewData["Title"] = "Admin Page";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolio</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolio Update</div>
					</div>
					<div class="card-body">

						@if (Model != null && Model.Any())
						{
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">Name</th>
										<th scope="col">Description</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										<tr>
											<td>@item.PortfolioName</td>
											<td>@item.PortfolioDesc</td>
											<td><a href="/AdminPortfolio/DeletePortfolio/@item.PortfolioId" btn btn-danger">Sil</a></td>
											<td><a href="/AdminPortfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}



								</tbody>
							</table>
							<a href="/AdminPortfolio/CreatePortfolio/" class="btn btn-primary">Create A New Portfolio</a>
						}
						else
						{
							<h1>There Is No Skills</h1>
							<a href="/AdminPortfolio/CreatePortfolio/" class="btn btn-primary">Create A New Portfolio</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

