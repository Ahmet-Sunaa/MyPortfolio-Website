@model List<MyPortfolio_Website.DAL.Entities.Portfolio>

@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolio</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Portfolio Create</div>
                    </div>
                    <div class="card-body">

                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="Title">Title</label>
                                <input type="text" name="Title" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="Description">Portfolio Name</label>
                                <input type="text" name="PortfolioName" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="SubTitle1">Portfolio Description</label>
                                <input type="text" name="PortfolioDesc" class="form-control" placeholder="Nakit Ödeme" />
                            </div>

                            <div class="form-group">
                                <label for="SubTitle1">Portfolio Categories</label>
                                <input type="text" name="PortfolioCategories" class="form-control" placeholder="Nakit Ödeme" />
                            </div>

                            <div class="form-group">
                                <label for="SubTitle1">Portfolio Link</label>
                                <input type="text" name="PortfolioUrl" class="form-control" placeholder="Nakit Ödeme" />
                            </div>

                            <div class="form-group">
                                <label for="SubTitle1">Portfolio Canlı Linki</label>
                                <input type="text" name="PortfolioWebUrl" class="form-control" placeholder="Canlı Önizleme Linki" />
                            </div>


                            <div class="form-group">
                                <label for="SubTitle2">Resim Seç</label>
                                <input type="file" name="PortfolioImage" accept="image/*"
                            </div>

                            <button type="submit" class="btn btn-info mt-3">Create Portfolio</button>
                            <div id="ajaxResponseMessage" class="mt-2" style="display: none;"></div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
