@model List<MyPortfolio_Website.DAL.Entities.Skill>

@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Skills</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Skill Update</div>
					</div>
					<div class="card-body">
						
						@if (Model != null && Model.Any())
						{
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">Title</th>
										<th scope="col">Name</th>
										<th scope="col">Point</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										<tr>
											<td>@item.Title</td>
											<td>@item.SkillName</td>
											<td>@item.SkillPoint</td>
											<td><a href="/AdminSkills/DeleteSkill/@item.SkillId" btn btn-danger">Sil</a></td>
											<td><a href="/AdminSkills/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}



								</tbody>
							</table>
							<a href="/AdminSkills/CreateSkill/" class="btn btn-primary">Create A New Skil</a>
						}
						else
						{
							<h1>There Is No Skills</h1>
							<a href="/AdminSkills/CreateSkill/" class="btn btn-primary">Create A New Skill</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

