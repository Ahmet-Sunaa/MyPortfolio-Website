@model List<MyPortfolio_Website.DAL.Entities.Expericence>

@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Expericence</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Expericence Create</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <div class="form-group">
                                <label for="Title">Title</label>
                                <input type="text" name="Title" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="Description">Expericence Role</label>
                                <input type="text" name="ExpericenceRole" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="SubTitle1">Expericence Date</label>
                                <input type="text" name="ExpericenceDate" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="SubTitle1">Expericence Description</label>
                                <input type="text" name="ExpericenceDesc" class="form-control"/>
                            </div>

                            <button type="submit" class="btn btn-info mt-3">Create Expericence</button>
                            <div id="ajaxResponseMessage" class="mt-2" style="display: none;"></div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
